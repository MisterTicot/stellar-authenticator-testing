{
  "name": "stellar-authenticator",
  "version": "0.7.0",
  "description": "An application to easily & securely sign Stellar transactions",
  "main": "authenticator.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "standard --fix 'src/**.js'",
    "get-src": "git submodule update --init --recursive",
    "build-css": "cat src/*.css | autoprefixer-cli -o authenticator.css",
    "build-html": "cp -f src/*.html .",
    "build-js": "webpack -p",
    "build": "npm run build-js && npm run build-css && npm run build-html",
    "check": "npm ci && npm run get-src && npm run build && git status",
    "watch": "webpack -d --watch",
    "serve": "npm run watch & live-server --no-browser --ignore='**/node_modules/**,**/src/**'"
  },
  "browserslist": "last 4 versions, > 0.1%",
  "keywords": [
    "cryptocurrency",
    "stellar",
    "authenticator"
  ],
  "homepage": "https://github.com/MisterTicot/stellar-authenticator#readme",
  "bugs": {
    "url": "https://github.com/MisterTicot/stellar-authenticator/issues"
  },
  "author": "Mister.Ticot",
  "license": "MIT",
  "repository": "github:MisterTicot/stellar-authenticator.git",
  "devDependencies": {
    "@stellarguard/sdk": "^1.4.1",
    "autoprefixer": "^8.6.5",
    "autoprefixer-cli": "^1.0.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-runtime": "^6.26.0",
    "postcss-loader": "^2.1.6",
    "scrypt-async": "^2.0.0",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "tweetnacl": "^1.0.0",
    "tweetnacl-util": "^0.15.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^2.1.5"
  },
  "dependencies": {
    "live-server": "^1.2.0"
  }
}
